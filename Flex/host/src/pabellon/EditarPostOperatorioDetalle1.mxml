			/**
			 * elimina una fila dentro de la tabla
			 */
           	private function updateRow():void {
            	if(Tabla.selectedItem){
            		var newEditarPost:EditarPostOperatorioDetalle2 = Application.application.EditarPostODetalle2;
					
					this.setVisible(false,false);
					
					newEditarPost.nombre.text = Tabla.selectedItem.nombreMascota;
					newEditarPost.raza.text = Tabla.selectedItem.raza;
					newEditarPost.sexo.text = Tabla.selectedItem.sexo;
					newEditarPost.fecha.text = Tabla.selectedItem.stfecha;
					newEditarPost.hora.text = Tabla.selectedItem.shora;
					newEditarPost.indicaciones.text = Tabla.selectedItem.indicaciones;
					newEditarPost.costo.costo.text = Tabla.selectedItem.costo;

					newEditarPost.setVisible(true,false);
					
            		this.setVisible(false,false);
            		Application.application.EditarPostODetalle2.visible=true;
            		
            		/*
            		//Alert.show(tablaAtenciones.selectedItem.hora.toString());
