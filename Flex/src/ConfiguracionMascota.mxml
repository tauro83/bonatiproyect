<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" width="779" height="466" title="Configuración de mascota" borderColor="#15AD8F">
	<mx:Script>
		<![CDATA[
			import mx.core.Application;
			import mx.collections.ArrayCollection;   
			[Bindable]private var especies:ArrayCollection = new ArrayCollection([
		          {nombre:"Gatos"},
		          {nombre:"Caballos"},
		          {nombre:"Perros"},
		          {nombre:"Otros"},
	        ]);

			[Bindable]private var razas:ArrayCollection;
			
	
			private function cargarDatos(event:Event):void
			{
				
				if(especiesGrid.selectedItem){
					especieInput.text = especiesGrid.selectedItem as String;
					razas = new ArrayCollection([
				          {nombre:"San Bernardo"},
				          {nombre:"Gran Danés "},
				          {nombre:"Rottweiler"},
				          {nombre:"Pastor Alemán"},
				          {nombre:"Bóxer"},
				          {nombre:"Labrador"},
				          {nombre:"Bulldog"},
				          {nombre:"Dálmata"},
	        		]);
				}
				
			}
			
			public function cancelarVisulizar():void
			{	
				Application.application.setInvisible();
            	Application.application.panel2.setVisible(true,false);
            	Application.application.AdmOpciones1.setVisible(true,false);
			}
			
		]]>
	</mx:Script>
		
	
	<mx:DataGrid x="35" y="58" width="286.15002" id="especiesGrid" dataProvider="{especies}" click="cargarDatos(event)">
		<mx:columns>
			<mx:DataGridColumn headerText="Nombre" dataField="nombre"  />
		</mx:columns>
	</mx:DataGrid>
	<mx:DataGrid x="419.95" y="58" width="286.15" dataProvider="{razas}">
		<mx:columns>
			<mx:DataGridColumn headerText="Nombre" dataField="nombre"/>
		</mx:columns>
	</mx:DataGrid>
	<mx:Label x="35" y="32" text="Especies disponibles" width="152" fontWeight="bold"/>
	<mx:Label x="419.95" y="32" text="Razas disponibles" width="131" fontWeight="bold"/>
	<mx:Button xmlns:mx="http://www.adobe.com/2006/mxml" width="90.05" height="23" x="133.05" label="Eliminar" y="274.25"/>
	<mx:Button xmlns:mx="http://www.adobe.com/2006/mxml" width="90.05" height="23" x="35" label="Editar" y="274.25"/>
	<mx:Button xmlns:mx="http://www.adobe.com/2006/mxml" width="90.05" height="23" x="231.1" label="Registrar" y="274.25"/>
	<mx:TextInput x="133.05" y="233" width="188.09999" id="especieInput"/>
	<mx:Label x="35" y="235" text="Especie:" width="75"/>
	<mx:TextInput x="518" y="233" width="188.1" id="razaInput"/>
	<mx:Label x="419.95" y="235" text="Raza:" width="75"/>
	<mx:Label x="187" y="383" width="407" height="17" id="ltexto" fontWeight="bold" textAlign="center"/>
	<mx:Button xmlns:mx="http://www.adobe.com/2006/mxml" width="90" height="23" x="616.05" label="Volver" y="338.25" click="cancelarVisulizar()"/>
	<mx:Button xmlns:mx="http://www.adobe.com/2006/mxml" width="90.05" height="23" x="518" label="Eliminar" y="274.25"/>
	<mx:Button xmlns:mx="http://www.adobe.com/2006/mxml" width="90.05" height="23" x="419.95" label="Editar" y="274.25"/>
	<mx:Button xmlns:mx="http://www.adobe.com/2006/mxml" width="90.05" height="23" x="616.05" label="Registrar" y="274.25"/>
		
</mx:Panel>
