           	/**
			 *  Hace invisible todos los paneles
			 * */
           	private function setInvi():void
           	{
           		anuCirugia.visible = false;
           		delVacu.visible = false;
           		anuVacu.visible = false;
           		regUsuario.visible = false;
           		visFicha.visible = false;
           		elimUsuario.visible = false;
				purgUsuario.visible = false;
           		estPeluqueria.visible =false;
				registerCliente.visible=false;
           		anuPreoperatorio.visible=false;
           		registerConsulta1.visible=false;
           		agen.visible = false;
           		regMascota.visible = false;
           		editUsua.visible = false;
           		edimasc.visible = false;
           		addCiruAyu.visible = false;
           		addvacuAyu.visible = false;
           		conMas.visible = false;
           		conSer.visible = false;
           		conUsu.visible = false;
           		conVac.visible = false;
           		ediCatalogo.visible = false;
				eliAviso.visible = false;
           	}
           	
           	/**
			 *  Corrige error de seleccionar el primero
			 * */
		    public function Seleccionar(event:Event):void
			{
			    if(inputTitulos.selectedIndex==0)
			    {
			    	inputTitulos.text=inputTitulos.selectedLabel;
			    }
			}

			/**
			 *  Visualiza el panel deseado, luego de ser mascado
			 *  una opción desde la lista de resultados
			 * */
          	private function verDetalle(event:Event):void
           	{	
           		setInvi();
           		switch(gridResult.selectedItem.nameT)
           		{
					case 'Anular Cirugía':	
						anuCirugia.visible = true;
					break; 
					
					case 'Eliminar Aviso':
						eliAviso.visible = true;
					break;
					case 'Editar Catalogo':
						ediCatalogo.visible = true;
					break;
					case 'Anular Vacunación':
						anuVacu.visible = true;
					break;
					case 'Eliminar Vacunación':
						delVacu.visible = true;
					break;
					case 'Eliminar Vacunación':
						delVacu.visible = true;
					break;
					case 'Registrar Usuario':
						regUsuario.visible = true;
					break;					
					case 'Visualizar Ficha':
						visFicha.visible = true;
					break;
					case 'Eliminar Usuario':
						elimUsuario.visible = true;
					break;
					case 'Purgar Usuario':
						purgUsuario.visible = true;
					break;
					case 'Estadisticas Peluqueria':
						estPeluqueria.visible = true;
					break;
					case 'Registrar Cliente':
						registerCliente.visible = true;
					break;
					case 'Anular Preoperatorio':
						anuPreoperatorio.visible = true;
					break;
					case 'Registrar Consulta':
						registerConsulta1.visible = true;
					break;
					case 'Agenda':
						agen.visible = true;
					break;
					case 'Registrar Mascota':
						regMascota.visible = true;
					break;
					case 'Editar Usuario':
						editUsua.visible = true;
					break;
					case 'Editar Mascota':
						edimasc.visible = true;
					break;
					case 'Registrar Cirugía':
						addCiruAyu.visible = true;
					break;
					case 'Registrar Vacunación':
						addvacuAyu.visible = true;
					break;
					case "Configuar Servicios":
						conSer.visible = true;
					break;
					case "Configuar Mascotas":
						conMas.visible = true;
					break;
					case "Configuar Usuarios":
						conUsu.visible = true;
					break;
					case "Configuar Vacunas":
						conVac.visible = true;
					break;
				}
           	}
           
        ]]>
