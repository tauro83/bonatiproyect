			* 
			*/
			private function getAllMascotas():void{
				var mascotaService:MascotaService = new MascotaService();
				mascotaService.addEventListener(ResultEvent.RESULT,getAllMascotasResult);
				mascotaService.getAllMascotas();
			}
			
			/**
