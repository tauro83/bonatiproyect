			* @param event Evento
			*/
			private function getAllMascotasResult(event:ResultEvent):void{
				mascotas = event.result as ArrayCollection;
				mascotas.refresh();
			}
			
			/**
			* Funcion que llama a retornar todas las mascotas de un cliente
			*/
			private function getMascotas():void{
				var mascotaService:MascotaService = new MascotaService();
				mascotaService.addEventListener(ResultEvent.RESULT,getMascotasResult);
				mascotaService.getMascotas(rutClienteInput.text);
			}
			
			/**
			* Funcion que obtiene todas las mascotas de un cliente
			* @param event Evento
			*/
			private function getMascotasResult(event:ResultEvent):void{
				mascotas = event.result as ArrayCollection;
				mascotas.refresh();
			}
			
			/**
			* Funcion que llama para retornar todos los clientes
			* @param event Evento
			*/
			private function getPerson(rutCliente:String):void{
				var personService:PersonService = new PersonService();
				personService.addEventListener(ResultEvent.RESULT,getPersonResult);
//				personService.getPerson(rutCliente);
			}
			
			/**
			* Aquí van los comentarios del método
			* @param event Evento
			*/
			private function getPersonResult(event:ResultEvent):void{
				cliente = event.result as Person;
				
				if(cliente == null){
        			Alert.show("Cliente no registrado!");
        			datosMascota.visible = false;
        		}
        		else{
        			datosMascota.visible = true;
        			rutClienteOutput.text = cliente.rut;
        			nombreClienteOutput.text = cliente.name;
        			apellidoClienteOutput.text = cliente.lastName;
        			ini(event);
        		}
			}
			
			/**
			* Funcion que inserta una mascota
			*/
			private function insertMascota():void{
				var mascota:Mascota = new Mascota();
				mascota.id = rutClienteInput.text + nombreInput.text;
				mascota.rutCliente = rutClienteInput.text;
				mascota.nombre = nombreInput.text;
				mascota.fechaNacimiento = fechaNacimientoInput.text;
				mascota.claseAnimal = claseAnimalInput.text;
				mascota.raza = razaInput.text;
				mascota.sexo = sexoInput.text
				
				var mascotaService:MascotaService=new MascotaService();
				mascotaService.addEventListener(ResultEvent.RESULT,insertMascotaResult);
				mascotaService.insertMascota(mascota);
			}
			
			/**
			* Funcion que responde a la insercion de la mascota anterior
			* @param event Evento
			*/
			private function insertMascotaResult(event:ResultEvent):void{
				var result:int = event.result as int ;
				if(!result>0)
					Alert.show("Mascota NO registrada!");
				else{
					getMascotas();
					mascotas.refresh();
					nombreInput.text = "";
					fechaNacimientoInput.text = "";
					claseAnimalInput.text = "";
					razaInput.text = "";
				}
			}	
