<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" width="779" height="466" borderColor="#15AD8F" title="Registrar Pago" xmlns:ns1="com.adobe.flex.extras.controls.*"  xmlns:ns2="util.*">
	
	<mx:Script>
        <![CDATA[
        
        	//=======================================================================
			// FECHA: CREACIÓN: 22 Noviembre
			// AUTOR: Sebastian Arancibia
			// Panel de registro de pago, dentro de esta se pueden realizar 
			// los pagos con el detalle necesario
			//=======================================================================
			import mx.core.Application;
			import mx.collections.ArrayCollection;
			import transferObjects.DetallePago;
			import mx.controls.Alert;
			
			[Bindable]private var pagos:ArrayCollection;
			
			public function iniciarPanel():void{
				//Alert.show("waaaaaa");
				var dp:Object = new Object;
				pagos =  new ArrayCollection();
				dp.cantidad = 2;
				dp.codigoProducto = "12345";
				dp.nombreProducto = "Pendol";
				dp.descripcion = "Alejar de los ninios"
				dp.fecha = new Date();
				dp.hora = "12:34:56";
				dp.subtotal = 22000;
				
				pagos.addItem(dp);
				pagos.addItem(new Object());
			
			}
			
			public function cancelar():void{
				this.visible = false;
				Application.application.panelPetshop.visible = true;
				
			}
			public function cambiooo():void{
			Alert.show("cambiooooo");
			}
	 ]]>
       
    </mx:Script>
	<mx:DataGrid x="19" y="45" width="718" height="275" editable="true" dataProvider="{pagos}" dataChange="cambiooo()">
		<mx:columns>
			<mx:DataGridColumn headerText="Código" dataField="codigoProducto" width="80"/>
			<mx:DataGridColumn headerText="Nombre" dataField="nombreProducto" width="120" editable="false"/>
			<mx:DataGridColumn headerText="Descripción" dataField="descripcion" editable="false"/>
			<mx:DataGridColumn headerText="Cantidad" dataField="cantidad" width="70" editable="false"/>
			<mx:DataGridColumn headerText="Subtotal" dataField="subtotal" width="70" editable="false"/>
		</mx:columns>
	</mx:DataGrid>
	<mx:Label x="19" y="19" text="Detalle Producto:" fontWeight="bold"/>
	<mx:Label x="627" y="328" text="Total:" fontWeight="bold"/>
	<mx:Button x="662" y="357" label="Cancelar" click="cancelar()"/>
	<mx:Button x="590" y="357" label="Pagar"/>
	<mx:Label x="668" y="328" text="$0.000.000" width="69"/>
	<mx:Label x="167" y="399" width="407" height="17" id="labelMessage" textAlign="center" fontWeight="bold"/>
	<mx:Label x="520" y="19" text="Código:"/>
	<mx:TextInput x="577" y="17"/>
	
</mx:Panel>
