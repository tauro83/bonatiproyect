<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" width="779" height="383" title="Ayuda">
	
	<mx:Script>
		<![CDATA[
		import mx.controls.Alert;
		
		[Bindable]private var textoAyuda:String="Ayuda para el componente...";
			
			private function changeAcordeon():void{
				//Aca insertan en dentro de un if su texto de ayuda para cada componente
				
				if(mainMenuAcordeon.selectedIndex==2 && subMenuAcordeon2.selectedIndex ==2){
					textoAyuda="1.- Para acceder a las estadísticas de la clínica, primero que todo en nuestro menú superior presionamos el botón 'Clínica'.\n\n" + 
							"2.- Con esto el menú lateral hizquierdo cambiará mostrándonos las opciones dentro de este módulo.\n\n" + 
							"3.- A continuación presionamos sobre 'Estadísticas' o cualquiera de sus sub-menus, lo que nos mostrará distinta información referente a las atenciones.\n\n" + 
							"4.- Alternando entre los botones 'Policlínico' y 'Pabellón', el grafico cambiará para tener estadísticas específicas del período elejido. \n";
				}
				
			}
		]]>
	</mx:Script>
	<mx:Accordion x="-1" y="0" width="182" height="343" id="mainMenuAcordeon" change="changeAcordeon()">
		<mx:Canvas label="Administracion" width="100%" height="100%">
			<mx:Accordion x="10" y="0" width="100%" height="100%" id="subMenuAcordeon0" change="changeAcordeon()">
				<mx:Canvas label="Visualizar Ficha" width="100%" height="100%">
				</mx:Canvas>
				<mx:Canvas label="Registrar" width="100%" height="100%">
				</mx:Canvas>
				<mx:Canvas label="Editar" width="100%" height="100%">
				</mx:Canvas>
				<mx:Canvas width="100%" height="100%" label="Eliminar">
				</mx:Canvas>
				<mx:Canvas label="Purgar" width="100%" height="100%">
				</mx:Canvas>
			</mx:Accordion>
		</mx:Canvas>
		<mx:Canvas label="Agenda" width="100%" height="100%">
		</mx:Canvas>
		<mx:Canvas label="Clinica" width="100%" height="100%">
			<mx:Accordion x="10" y="0" width="100%" height="100%" id="subMenuAcordeon2" change="changeAcordeon()">
				<mx:Canvas label="Pabellon" width="100%" height="100%">
				</mx:Canvas>
				<mx:Canvas label="Policlinico" width="100%" height="100%">
				</mx:Canvas>
				<mx:Canvas label="Estadisticas" width="100%" height="100%">
				</mx:Canvas>
			</mx:Accordion>
		</mx:Canvas>
		<mx:Canvas label="Peluquería" width="100%" height="100%">
		</mx:Canvas>
		<mx:Canvas label="Pet Shop" width="100%" height="100%">
		</mx:Canvas>
		<mx:Canvas label="Hotelería" width="100%" height="100%">
		</mx:Canvas>
	</mx:Accordion>
	<mx:TextArea x="181" y="0" width="578" height="343" editable="false" text="{textoAyuda}"/>
	
</mx:Panel>
