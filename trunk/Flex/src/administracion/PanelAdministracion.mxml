          {
          	Application.application.AdmIngreso2.limpiarTodo();
          	Application.application.setInvisible();
          	//Application.application.AdmIngreso2.limpiarTodo();
            this.visible = true;
            Application.application.AdmIngreso2.visible = true;	
          }
          
