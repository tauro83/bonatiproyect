         {
         	Application.application.setInvisible();
         	this.visible = true;
         	Application.application.confMascota.resetVars();
         	Application.application.confMascota.visible = true;
         	
         }
         
         private function registrarUsuario():void
         {
         	Application.application.setInvisible();
         	this.visible = true;
         	Application.application.AdRegUsuario2.iniciar();
         	Application.application.AdRegUsuario2.resetVars();
          	Application.application.AdRegUsuario2.visible = true;
         }
         
         private function editarUsuario():void
         {
         	Application.application.AdEditarUsuar2.getAllUsuarios();
            Application.application.setInvisible();
            Application.application.AdmOpciones1.setVisible(true,false);
            Application.application.AdEditarUsuar2.setVisible(true,false);
         }
         
         private function eliminarUsuario():void
          {
          	
         	Application.application.setInvisible();
            Application.application.AdmOpciones1.setVisible(true,false);
            Application.application.elimusuario.getAllUsuarios();
            Application.application.elimusuario.resetMessage();
            Application.application.elimusuario.setVisible(true,false);
            
          }
         
          private function purgarUsuario():void
          {
         	Application.application.setInvisible();
            Application.application.AdmOpciones1.setVisible(true,false);
            Application.application.purgusuario.getAllUsuarios();
            Application.application.purgusuario.resetMessage();
            Application.application.purgusuario.setVisible(true,false);
          }
         
          private function visualizarFicha():void
          {
          	Application.application.setInvisible();
          	Application.application.visualizarFicha.getAllFichas();
			Application.application.visualizarFicha.setVisible(true,true);
            Application.application.AdmOpciones1.setVisible(true,false);
            Application.application.visualizarFicha.setVisualizarFicha(Application.application.verFicha); 
          }
/**********************************************************/          
          private function bitacoraFicha():void
          {
          	Application.application.setInvisible();
            Application.application.AdmOpciones1.setVisible(true,false);
            Application.application.bitacoraList.getAllDatos();
            Application.application.bitacoraList.setVisible(true,false);
          }
/**********************************************************/
