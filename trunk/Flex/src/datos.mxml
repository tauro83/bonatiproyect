			public function getIdServicio():String
			{
				return "2";
				
			}
			
			//Aqui va la informacion que ustedes reciban desde el panel, que quieran enviar a la capa logica.
				
			public function getInfoComp():String
			{
				texto2 = ingresoNombre.text;
				texto3 = rut.text;
				texto4 = digitoRut.text;
				
				texto2 = texto2.concat("&");
				texto2 = texto2.concat(texto3);
				texto2 = texto2.concat("&");
				
				texto = texto2.concat(texto4);
				return texto;
			}
			
			//hay q mencionar q los arreglos sacan los datos con pop(), por lo tanto sacan el ultimo dato q se ingreso
			//ustedes deciden si colocan al ultimo el primer dato que necesiten, o lo colocan normal, y asignan desde la ultima variable a la primera.
			public function setInfoComp(s1:String):void
			{
				arreglo=s1.split("&",4);
				
				digitoRut.text=arreglo.pop();
				rut.text=arreglo.pop();
				ingresoNombre.text=arreglo.pop();
			}
		]]>
	</mx:Script>
	
