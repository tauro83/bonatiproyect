	<mx:Script>
		<![CDATA[
			            
			// ocupen la variable que quieran, no necesariamente estas.
            public var texto:String;
            public var texto2:String;
            public var texto3:String;
            public var texto4:String;
            public var arreglo:Array;
            
            
            public function getIdPanel():String
            {
            	return "datosPanel";
            }
            

			///////////////////////////////////////////////////
			//  0 Administracion
			//	1 Agenda
