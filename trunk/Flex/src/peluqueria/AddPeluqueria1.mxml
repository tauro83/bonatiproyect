			/**
			 * Funcion que busca un cliente, en la base de datos, para esto primero verifica 
			 * si el rut esta ingresado correctamente, en caso de estar incorrecto lo informa por pantalla.
			 * En caso contrario realiza las llamadas a la capa de java, la cual procesara la soliitud, y 
			 * retornara si el cliente existe o no.
		 	 * 	@author  "Jimmy Muñoz"
			 * @param event Evento
			 */
        	private function buscarCliente(event:Event):void{
        		if(this.rutEnvi != this.nombRutInput.rutClienteInput.text){
        			if(nombRutInput.rutClienteDVInput.text != "" && nombRutInput.rutClienteInput.text != ""){
        				if(!Validacion.validaRut(nombRutInput.rutClienteInput.text, nombRutInput.rutClienteDVInput.text)){
							labelMessage.text = Properties.getMensaje("Error", "4");
						}
						else{
							labelMessage.text = "";
							nombRutInput.rutClienteInput.errorString = "";
							getCliente(nombRutInput.rutClienteInput.text);
						}
        			}
        		}
        				
