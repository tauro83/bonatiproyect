		   			catalog= listCatalogosP.getItemAt(i,0) as CatPeluqueria;
		   			catalog2 = new CatPeluqueria();
		   			catalog2.nombre = ""+catalog.servicio.split(" ",1).pop()+" "+catalog.nombre.split(" ",1).pop();
