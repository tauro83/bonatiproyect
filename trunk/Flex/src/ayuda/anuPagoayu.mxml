	<mx:LinkButton x="118" y="36" label="barra principal" id="linkBarraPrincipal" click="verBarra()" color="blue" width="108"/>
	<mx:Image x="10" y="170" width="355" height="43" id="barra" visible="false">
		<mx:source>../images/ayuda/barra principal.JPG</mx:source>
	</mx:Image>
	<mx:Button x="263" y="350" label="Volver" id="botVolver" width="102" click="volver2()" visible="false"/>
	<mx:LinkButton x="60" y="64" label="opciones del módulo" color="blue" id="linkOpciones" click="verOpcMod()"/>
	<mx:Image x="95" y="10" width="185" height="332" source="../images/ayuda/opciones modulo pago.JPG" id="opcMod" visible="false"/>
	
</mx:Canvas>
